{
  "compilerOptions": {
    "target": "esnext", 
    "module": "esnext",
    "allowJs": true,
    "jsx": "react-jsx", 
    "strict": true,
    "esModuleInterop": true, 
    "skipLibCheck": true, 
    "forceConsistentCasingInFileNames": true, 
    "types": ["vitest/globals"], 
    "baseUrl": "./", 
    "paths": {
      "@/*": ["src/*"] 
    }
  },  
  "include": [
    "src/**/*", 
    "src/_test_/**/*" 
  ],
  "exclude": [
    "node_modules", 
    "**/*.spec.ts", 
    "**/*.test.ts" 
  ]
}
